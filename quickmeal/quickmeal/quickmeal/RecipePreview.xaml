<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="quickmeal.RecipePreview"
             Title="Twój przepis">
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="Android, WinPhone, Windows" Value="0" />
        </OnPlatform>
    </ContentPage.Padding>
    
    <ScrollView>
        <StackLayout Orientation="Vertical" BackgroundColor="#f2f2f2">

            <Label x:Name="RecipeName"
                   TextColor="#1a1a1a"
                   FontSize="25"
                   Margin="5,5,5,5"
                   HorizontalOptions="CenterAndExpand"/>
            <Image x:Name="RecipeImage"
                   Aspect="AspectFill"
                   Margin="10,5,10,5"
                   HeightRequest="200"/>
            <Label x:Name="RecipeTime"
                   TextColor="#1a1a1a"
                   FontSize="22"
                   Margin="5,5,5,5"
                   HorizontalOptions="StartAndExpand"/>
            <Label x:Name="RecipeDescription"
                   TextColor="#1a1a1a"
                   FontSize="18"
                   Margin="5,5,5,5"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="StartAndExpand"/>
        
        </StackLayout>
    </ScrollView>

</ContentPage>